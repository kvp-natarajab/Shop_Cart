<div class="form-container">
  <div class="form-wrapper">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

                  <div class="field">
                    <%= f.label :name %><br>
                    <%= f.text_field :name,  required: true, autofocus: true, class:"form-control" %>
                  </div>

                <div class="field">
                    <%= f.label :role_id %><br>
                    <%= f.collection_select(:role_id,Role.where.not(name:"Admin"), :id, :name,{ prompt:"Select Role"}) %>
                  </div>
                  
                  <div class="field">
                    <%= f.label :email %>
                    <%= f.email_field :email, required: true, autofocus: true,class:"form-control" %>
                  </div>

                  <div class="field">
                    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                  </div>

                  <div class="field">
                   <%= f.input :password_confirmation, required: true, class:"form-control" %>
                  </div>

                  <div class="field">
                    <%= f.label :phone %><br>
                    <%= f.text_field :phone,  required: true, autofocus: true, class:"form-control" %>
                  </div>

                  <div class="field">
                    <%= f.label :address %><br>
                    <%= f.text_area :address,  required: true, autofocus: true, class:"form-control" %>
                  </div>

                  <div class="field">
                    <%= f.label :landmark %><br>
                    <%= f.text_field :landmark,  required: true, autofocus: true, class:"form-control" %>
                  </div>
                  <div class="field">
                    <%= f.label :country %><br>
                    <%= f.select :country, CountryStateSelect.countries_collection %>
                  </div>
                
                  <div class="field">
                    <%= f.label :state %><br>
                    <% options={form:f,field_names:{:country => :country, :state => :state } } %>
                    <%= f.select :state, CountryStateSelect.state_options(options) %>
                  </div>
               
                <div class="field">
                    <%= f.label :city %><br>
                    <%= f.text_field :city %>
                  </div>
           
                <div class="field">
                    <%= f.label :pincode %><br />
                    <%= f.number_field :pincode, autofocus: true, class:"form-control" %>
                </div>
      

        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>
        </div>
      <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
<script type="text/javascript">
$(document).on('ready page:load', function() {
  
return CountryStateSelect({
  country_id: "user_country",
  state_id: "user_state",
  city_id: "user_city",
});
});
</script>