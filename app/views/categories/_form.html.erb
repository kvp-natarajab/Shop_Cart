<%= form_for @category do |f| %>
	<% if @category.errors.any? %>
		<div id="error_explanation">
			<h4><%= pluralize(@category.errors.count, "error") %> Their are some error occured when saving category details:</h4>

			<ul>
				<% @category.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class="field">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>