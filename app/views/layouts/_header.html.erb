<header class="navbar navbar-fixed-top nav-bar-inverse">
	<div class="container">
		<nav>
			
			<a href="#"><img src="../assets/shopcart4.png"></a>
			<ul class="nav navbar-nav pull-right">
				<li><%= link_to "Home", root_path %></li>
				<li><%= link_to "Sign up", new_user_registration_path %></li>
				<% if user_signed_in? %>
					<% if current_user.customer? %>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Categories
							<b class="caret"></b></a>
							<ul class="dropdown-menu">
								<% @categories=Category.all %>
		                   		<% @categories.each do |category| %>
		                      		<li><%= link_to category.name, catalog_index_path(:id => category.id) %></a></li>
		                      		<li class="divider"></li> 
		                    	<% end %>
							</ul>
						</li>
						<li>
							<div class="search-container">
							<form action="/products/search/" method="get">   
                  				<input type="text" name="search_text" id="search_text">
                    			<input type="submit" value="search">
            				</form>
            				</div>
						</li>
						<li>
		                  <%= link_to cart_path do%>
		                   <span  class="glyphicon glyphicon-shopping-cart"></span> Cart (<span class="cart-count"><%= current_user.cart_count %></span>)
		                  <%end%>
	              		</li>
              		<% end %>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						<%= current_user.email%> <b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to "Edit", edit_user_registration_path %></li>
							<li class="divider"></li>
							<li>
								<%= link_to "Log out", destroy_user_session_path, method: :delete %>
							</li>
						</ul>
					</li>
				<% else %>
					<li><%= link_to "Log in", new_user_session_path %></li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>
<script>
  $(function () {
    var selectItem = function (event, ui) {
        window.location.replace("/catalog/index?product_name="+ui.item.value);
        return false;
    }
    $("#search_text").autocomplete({
        source: function (request, response) {
          $.get(
            "/products/search/"+request.term,
            function (data) {
              response(data)
            });
    },
        select: selectItem,
        minLength: 1
    });
});
</script>