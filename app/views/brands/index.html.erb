
<table id="brandTable">
	<thead>
		<tr>
			<th>Brand name</th>
			<th>Description</th>
			<th>Sub Category</th>
			<th>Show</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
		<% @brand.each do |brand| %>
		<tr>
			<td><%= brand.name %></td>
			<td><%= brand.description %></td>
			<td><%= brand.subcategory.name %></td>
			<td><%= link_to 'Show', brand %></td>
			<td><%= link_to 'Edit', edit_brand_path(brand)%></td>
			<td><%= link_to 'Delete', brand, method: :delete, data: { confirm: 'Are you sure? category details will be deleted.' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<script>
$(document).ready(function(){
    $('#brandTable').DataTable();
});
</script>