<div class="order-search-container">
  <div class="heading-container">
    <span class="head">Listing Shippers</span>
  </div>
  <div class="search-container">
    <div class="search-oder-wrapper">
      <input type="text" id="myInputTextField" placeholder="Search">
    </div>
    <div class="total-order-wrapper">
      <p class="total-amount-p">
        <% if can? :create, Shipper %>
          <%= link_to 'New shipper', new_shipper_path,{class:"btn btn-default"} %>
        <% end %>
        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Show/Hide Panel</a>
      </p>
    </div>
  </div>
</div>
<table id="shipperTable">
	<thead>
		<tr>
			<th>Company name</th>
			<th>Phone</th>
			<th>No od days required for delivery</th>
			<th>Show</th>
			<th>Edit</th>
			<th>Destroy</th>
		</tr>
	</thead>
	<tbody>
		<% @shipper.each do |shipper| %>
		<tr>
			<td><%= shipper.company_name %></td>
			<td><%= shipper.phone %></td>
			<td><%= shipper.day %></td>
			<td><%= link_to 'Show', shipper %></td>
			<td><%= link_to 'Edit', edit_shipper_path(shipper)%></td>
			<td><%= link_to 'Delete', shipper, method: :delete, data: { confirm: 'Are you sure? category details will be deleted.' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<script>
$(document).ready(function(){
	oTable = $('#shipperTable').DataTable( {
      "sDom": '<"top"i>rt<"bottom"flp><"clear">'
    });   
    $('#myInputTextField').keyup(function(){
        oTable.search($(this).val()).draw() ;
    });
});
</script>