<h2>Signvcvvs up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

   <div class="field">
    <%= f.label :company_name %><br />
    <%= f.text_field :company_name, autofocus: true, class:"form-control" %>
  </div>


  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autofocus: true, class:"form-control" %>
  </div>


  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, autofocus: true, class:"form-control" %>
  </div>
   

  <div class="field">
    <%= f.label :country %><br />
    <%= f.select :country, CountryStateSelect.countries_collection, class:"form-control" %>
  </div>


  <div class="field">
    <% options = { form: f, field_names: { :country => :country, :state => :state } } %>
    <%= f.label :state %><br />
    <%= f.select :state, CountryStateSelect.state_options(options), class:"form-control" %>
  </div>


  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autofocus: true, class:"form-control" %>
  </div>


   <div class="field">
    <%= f.label :pincode %><br />
    <%= f.number_field :pincode, autofocus: true, class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "sellers/shared/links" %>
